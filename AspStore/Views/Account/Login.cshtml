@model LoginModel;
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@*do a sliding image - google bootstrap loop image*@
<div class="d-flex justify-content-center align-items-center" id="login-container">
    <form class="shadow-sm rounded bg-body-tertiary" method="post" id="login-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3 position-relative">
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <label asp-for="Password" class="form-label"></label>
            <div class="input-group">
                <input asp-for="Password" class="form-control">
                <div class="d-flex justify-content-end">
                    <button class="bi-eye-fill position-absolute btn btn-link text-dark shadow-none" type="button" id="togglePassword"></button>
                </div>
            </div>
        </div>
        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input">
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-1">Log in</button>
        <a class="nav-link text-center" asp-action="Register">Don't have an account? Register here!</a>
    </form>
</div>