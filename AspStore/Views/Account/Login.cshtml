@model AspStore.Models.Account.LoginModel;
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="login-sliding-image-container-first">
    <div class="sliding-image-normal"></div>
</div>

<div class="login-sliding-image-container-second">
    <div class="sliding-image-reverse"></div>
</div>

<div class="login-sliding-image-container-third">
    <div class="sliding-image-normal"></div>
</div>

<div class="d-flex justify-content-center align-items-center" id="login-container">
    <form class="shadow-sm rounded bg-body-tertiary" method="post" id="login-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3">
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <label asp-for="Password" class="form-label"></label>
            <div class="input-group">
                <input asp-for="Password" class="form-control password">
                <div class="d-flex justify-content-end">
                    <button class="bi-eye-fill position-absolute btn btn-link text-dark shadow-none password-icon" tabindex="-1" type="button"></button>
                </div>
            </div>
        </div>
        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input">
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-1">Log in</button>
        <a class="nav-link text-center" asp-action="Register">Don't have an account? Register here!</a>
    </form>
</div>